<div class="container-fluid main-back_ground">
  <div class="row justify-content-md-center ">
    <div class="col col-lg-4 mt-4 jumbotron">
      <h2 class=" text-center ">Ingresar</h2>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        
        <div class="field mt-4 ">
          <%= f.label :email ,class:"text-secondary " %><br />
          <%= f.email_field :email, autofocus: true ,class:"form-control" %>
        </div>

        <div class="field mt-2">
          <%= f.label :password , "ContraseÃ±a" ,class:"text-secondary " %><br />
          <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me ,"Recuerdame",class:"text-secondary " %>
          </div>
        <% end -%>


        <div class="row justify-content-start">
            <div class="col-12 ">
                <%= f.submit "Ingresar",class:"btn btn-info col-lg-12  " %>
            </div>        


          </div>
    
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

   
    
    </div>
  </div>
</div>


<script>
  analytics.page("registro");
</script>