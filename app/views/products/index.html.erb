<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th>Cantidad</th>
      <th>Categoria</th>
      <th>SubCategoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
       
        <%= product.categoria %>
        
        
        <td><%= product.nombre %></td>
        <td><%= product.precio %></td>
        <td><%= product.descripcion %></td>
        <td><img width= '200px' src='<%= product.img %>' ></td>>
        <td><img width= '200px' src='<%= product.img_vacia %>' ></td>>
        <td><%= product.cantidad %></td>
        <td><%= product.categoria %></td>
        <td><%= product.subcategoria %></td>
        <td><%= link_to 'perzonalizar', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

