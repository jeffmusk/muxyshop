<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :product_nombre %>
  </div>

  <div class="field">
    <%= form.label :precio %>
    <%= form.number_field :precio, id: :product_precio %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion, id: :product_descripcion %>
  </div>

  <div class="field">
    <%= form.label :img %>
    <%= form.text_field :img, id: :product_img %>
  </div>

  <div class="field">
    <%= form.label :img_vacia %>
    <%= form.text_field :img_vacia, id: :product_img_vacia %>
  </div> 

  <div class="field">
    <%= form.label :cantidad %>
    <%= form.text_field :cantidad, id: :product_cantidad %>
  </div>

  <div class="field">
    <%= form.label :categoria, id: :product_categoria  %>
    <%= form.text_field :categoria %>
  </div>

  <div class="field">
    <%= form.label :subcategoria %>
    <%= form.text_field :subcategoria, id: :product_subcategoria  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
